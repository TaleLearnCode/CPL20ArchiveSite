<body class="width1200 sticky-header">
  <header>
    <div class="container">
      <div class="row">
        <div class="span3">
          <a asp-page="/Index" id="Logo" class="logo"><img src="https://greeneventstechnology.azureedge.net/cpl20/img/logo/HeaderLogo.png" alt="" /></a>
        </div>
        <div class="span7">
          <div class="flexnav-menu-button" id="flexnav-menu-button">Menu</div>
          <nav>
            <ul class="nav nav-pills flexnav" id="flexnav" data-breakpoint="800">
              <li><a asp-page="/Index">Home</a></li>
              @*<li><a asp-page="/Sessions/Schedule01">Sessions</a></li>*@
              <li Class="active">
                <a asp-page="/Sessions/Period1">Sessions</a>
                <ul>
                  <li><a asp-page="/Sessions/Period1">By Schedule Period</a></li>
                  @*<li><a href="/Speakers">Speakers</a></li>*@
@*                  <li><a asp-page="/Sessions/dotnet">By Tag</a></li>
*@                  <li><a asp-page="/Sessions/Topic_AppDev">By Topic</a></li>
                  @*<li><a href="/Conference/SpeakerSeries.aspx">Speaker Interview Series</a></li>*@
                </ul>
              </li>
              @*<li>
                  <a href="/Sponsors/Default.aspx">Sponsors</a>
                </li>*@
              @if (User.Identity.IsAuthenticated)
              {
                <li><a asp-area="AzureADB2C" asp-controller="Account" asp-action="SignOut">Sign Out</a></li>
              }
              else
              {
                <li><a asp-area="AzureADB2C" asp-controller="Account" asp-action="SignIn">Sign In</a></li>
              }
            </ul>
          </nav>
        </div>
        <div class="span2">
          <ul class="list list-inline pull-right">
            <li>
              <a href="https://www.facebook.com/CodePaLOUsa" class="icon-facebook box-icon-gray round box-icon-to-normal animate-icon-top-to-bottom"></a>
            </li>
            <li>
              <a href="https://twitter.com/CodePaLOUsa" class="icon-twitter box-icon-gray round box-icon-to-normal animate-icon-top-to-bottom"></a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </header>
  @RenderBody()
  <footer class="main">
    <div class="container">
      <div class="row">
        <div class="span2">
          <a id="HyperLink1" class="logo" href="http://localhost:55989/Default.aspx"><img src="https://greeneventstechnology.azureedge.net/cpl20/img/logo/HeaderLogo.png" alt="" /></a>
          <div class="gap gap-small"></div>
        </div>
        <div class="span3 offset1">
          <h5>About</h5>
          <p>A software development conference in the Louisville, KY area on August 18 - 20, 2021 designed to cover all aspects of software development regardless of development stack.</p>
        </div>
        <div class="span3">
          <h5>Keep in Touch</h5>
          <ul class="list list-inline">
            <li>
              <a class="icon-facebook box-icon-inverse box-icon-to-normal round animate-icon-left-to-right" href="https://www.facebook.com/CodePaLOUsa"></a>
            </li>
            <li>
              <a class="icon-twitter box-icon-inverse box-icon-to-normal round animate-icon-left-to-right" href="https://twitter.com/CodePaLOUsa"></a>
            </li>
          </ul>
          <br />
        </div>
      </div>
    </div>
    <div class="copyright center">
      <p>Copyright &#169; 2021 <a href="#">Code PaLOUsa</a>. All Right Reserved.</p>
    </div>
  </footer>

